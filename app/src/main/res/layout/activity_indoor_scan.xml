<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/place_autocomplete_search_hint">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:background="@color/design_default_color_background"
        android:orientation="vertical"
        android:weightSum="1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="40dp">

        <include
            layout="@layout/activity_barramenuhome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp" />
        <!--  <include
              layout="@layout/content_main"
              android:layout_width="match_parent"
              android:layout_height="452dp"
              android:layout_weight="1" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.13"
            android:background="@color/common_google_signin_btn_tint"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/txt_aula"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.87"
                android:background="@color/azul"
                android:paddingLeft="14dp"
                android:paddingBottom="11dp"
                android:textColor="@color/letra_blanca"
                android:textSize="20sp" />
            <!-- <TextView
                 android:id="@+id/txt_coord"
                 android:layout_width="128dp"
                 android:layout_height="match_parent"
                 android:layout_weight="0.08"
                 android:background="@color/azul"
                 android:textColor="@color/letra_blanca" />-->

        </LinearLayout>

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:contentDescription="TODO" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/info_aula"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.21"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="142dp"
                android:layout_height="match_parent"
                android:layout_weight="0.03"
                android:orientation="vertical"
                android:weightSum="1">

                <Button
                    android:id="@+id/info"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:autoText="false"
                    android:background="@drawable/borderedondos"
                    android:drawableTint="@color/letra_blanca"
                    android:text="@string/btn_aula"
                    android:textColor="@color/letra_blanca"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:style="@style/Base.Theme.AppCompat.Dialog.FixedSize" />

                <!-- <com.google.android.material.floatingactionbutton.FloatingActionButton
                     android:id="@+id/fab"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_gravity="bottom|end"
                     android:layout_margin="@dimen/fab_margin"
                     android:layout_weight="1"
                     android:tint="@color/letra_blanca"
                     app:srcCompat="@android:drawable/ic_popup_sync"
                     tools:ignore="MissingConstraints" />-->
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


